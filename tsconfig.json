{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "allowJs": true,
    "esModuleInterop": true,
    "moduleResolution": "node16",
    "module": "Node16",
    "resolveJsonModule": true,
    "paths": {
      "@/*": [
        "./*"
      ],
      "@firebase": [
        "./firebase.js"
      ]
    }
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    ".expo/types/**/*.ts",
    "expo-env.d.ts",
    "nativewind-env.d.ts"
  ]
}
